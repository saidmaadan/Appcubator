<div class="container">
  <div class='row'>
    <div class='col-md-12 project-h1'>
      <h2>Projects</h2>
    </div>
  </div>
<div class='col-md-12 project_wrap2'>

<% if @projects.any? %>
<% @projects.in_groups_of(2) do |group| %>
<div class='row'>
<% group.each do |project| %>
<% if project %>
<div class='col-xs-12 col-sm-6 col-md-6'>
<div class='row'>
<div class='col-md-5'>
<br><br>
<%= image_tag project.screenshot.url(:small) %></div>
<div class='col-md-7'>
<h3><%= link_to project.name, project %></h3>

<p><%= truncate(project.description, length: 80, separator: ' ') %></p>
<table>
      <tr>
        <th>Looking for:</th>
        <td><%= project.looking_for %></td>
      </tr>
      <tr>
        <th>Github:</th>
        <td><%= link_to "Source Code ", project.github_link, :target => "_blank", class: 'fa fa-github' %></td>
        
      </tr>
      <tr>
        <th>WebSite:</th>
        <td><%= link_to "Project Url ", project.web_url, :target => "_blank", class: 'fa fa-tablet' %></td>
      </tr>
      <tr>
        <th>Teams:</th>
        <td><%= project.teams %></td>
      </tr>
      <tr>
        <th>Target Amount:</th>
        <td><%= number_to_currency(project.target_amount) %></td>
      </tr>

    </table>

    </div>
    </div>
    </div>

    <% end %>
    <% end %>
    </div>

    <% end %>
    <% end %>
    <div class='paginate'>
    <%= paginate @projects, :outer_window => 3 %>
</div>
    </div>
    </div>

