<div class="container">
<article>
<%= link_to "All Projects", projects_path %>
  <header>
    <h1><%= @project.name %></h1>
    <%= image_tag @project.screenshot.url(:medium) %>
  </header>
  <h2>Description</h2>
  <p>
    <%= @project.description %>
  </p>
  <h3>Team Members</h3>
  <p>
    <%= @project.teams %>
  </p>
  <h3>Looking For</h3>
  <p>
    <%= @project.looking_for %>
  </p>
  <h3>Target Amount</h3>
  <p>
    <%= number_to_currency(@project.target_amount) %>
  </p>
  <h3>GitHub</h3>
  <p>
    <%= @project.github_link %>
  </p>
  <h3>Website</h3>
  <p>
    <%= @project.web_url %>
  </p>
  <p>

  </p>

  <nav>
  <%= link_to "All Projects", projects_path %> |
  <%= link_to "Edit", edit_project_path(@project) %> |
  <%= link_to "Delete", project_path(@project), method: :delete, data: {confirm: 'Are you sure?' } %>

</nav>
</article>
</div>
