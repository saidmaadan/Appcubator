<div class="container">
<div class="row">

<article>
 <header>
    <h1><%= @project.name %></h1>

  </header>

<div class='col-md-3'><br><br>
<%= image_tag @project.screenshot.url(:medium) %>
<p>

<h3>Average Review</h3>
  <h4>
    <%= format_average_stars(@project) %>
  </h4>
<h2><%= pluralize(@project.reviews.size, "Review") %></h2>
<%= link_to "Read More Review...",
            project_reviews_path(@project), class: "btn btn-info btn-lg" %>

<h3><%= link_to "Review this Project", new_project_review_path(@project), class: 'button ok review' %></h3>
</p>
</div>
<div class='col-md-6'>

  <h2>Description</h2>
  <p>
    <%= @project.description %>
  </p>
  <h3>Team Members</h3>
  <p>
    <%= @project.teams %>
  </p>
  <h3>Looking For</h3>
  <p>
    <%= @project.looking_for %>
  </p>
  <h3>Target Amount</h3>
  <p>
    <%= number_to_currency(@project.target_amount) %>
  </p>
  <h3>GitHub</h3>
  <p>
    <%= link_to @project.github_link, 'GitHub ' %>
  </p>
  <h3>Website</h3>
  <p>
    <%= link_to @project.web_url, 'Website' %>
  </p>
</div>
<div class='col-md-3'><br>
  <nav>
<%= link_to "All Projects", projects_path, class: 'btn btn-warning' %>
<% if current_user %>

  <%= link_to "Edit", edit_project_path(@project), class: 'btn btn-info' %><br>
<br>  <%= link_to 'Add Your Startup Project', new_project_path, class: 'btn btn-success' %>
  <% end %>
  <%# if current_user_admin? %>
  <%= link_to "Delete", project_path(@project), method: :delete, data: {confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
<%# end %>
</nav>
<p>
    <h2><%= pluralize(@followers.count, 'follow') %></h2>
  </p>

<% if current_user %>

  <%= button_to "Follow this Project", project_follows_path(@project), class: 'btn btn-primary btn-lg' %>
  <% end %>
  <% if @followers.any? %>
  <h3>Followers</h3>
  <ul>
    <% @followers.each do |user| %>
    <li>
      <%= link_to user.name, user %>
    </li>
    <% end %>
  </ul>
  <% end %>


 <% if @project.reviews.any? %>
    <h3>Reviews</h3>
    <ol id="reviews">
      <% @project.recent_reviews.each do |review| %>
        <li>
          <span class="review"><%= pluralize(review.stars, 'star') %></span>

          <span class="date">
            <%= time_ago_in_words(review.created_at) %> ago
          </span>
          <p>
            &quot;<%= review.remark %>&quot;
          </p>
        </li>
      <% end %>
    </ol>
    <% end %>

</div>
</article>
</div></div>






