<header id="content-header">
  <h1>Reviews for <%= link_to(@project.name, @project) %></h1>
</header>
<ol id="reviews">
  <% @reviews.each do |review| %>
    <li>
      <span class="review"><%= pluralize(review.stars, 'star') %></span>
      <span class="date"><%= time_ago_in_words(review.created_at) %> ago</span>
      <%= link_to delete_review_image, [@project, review],
                  id: "#{dom_id(review)}_delete",
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %>
      <p>
        &quot;<%= review.remark %>&quot;
      </p>
    </li>
  <% end %>
</ol>
