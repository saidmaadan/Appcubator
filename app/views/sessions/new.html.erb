<div class='container'>
  <div class='row main-session'>
    
        <% if current_user %>
          <h2>You already sign in</h2>
        <% else %>
          <div class='col-sm-5 col-offset-1'>
            <header id="content-header">
              <h1>Sign In</h1>
            </header>

            <%= form_tag(session_path) do %>
                <div class="form-group">
                  <%= text_field_tag :email, nil, required: true, autofocus: true, size: 40, placeholder: "Email or Username", class: "form-control" %>
                </div>
                <div class="form-group">

                  <%= password_field_tag :password, nil, required: true, size: 40, placeholder: "Password", class: "form-control" %>
                </div>
                <p><%= link_to "forgotten_password?", new_password_reset_path %></p>

                <div class="form-group">
                  <%= check_box_tag :remember_me, 1, params[:remember_me] %>
                  <%= label_tag :remember_me %>
                </div>

              <div class="form-group">
                <%= submit_tag 'Sign In', class: 'btn btn-info' %>
              </div>
            
          <% end %>
            <p>
              No account yet? <%= link_to 'Sign up!', signup_path %>
            </p>
          </div>

        <div class='col-md-1'></div>

        <div class='col-sm-5 hidden-xs'>
          <div class='row topimg'>
          <br><br>
          <div class='col-sm-4 hidden-xs thumbnail img-responsive'><%= image_tag("mks613.png", :alt => "Caressa") %></div>
         
          <div class='col-sm-4 hidden-xs thumbnail img-responsive '><%= image_tag("mks72.png", :alt => "Caressa") %></div>
          <div class='col-sm-4 hidden-xs thumbnail img-responsive '><%= image_tag("mks73.png", :alt => "Caressa") %></div>
         
          <%= image_tag "mks74.png", :alt => "Caressa", class: 'col-sm-4 hidden-xs thumbnail img-responsive ' %>
          <%= image_tag "mks75.png", :alt => "Caressa", class: 'col-sm-4 hidden-xs thumbnail img-responsive ' %>
          <%= image_tag "mks168.png", :alt => "Caressa", class: 'col-sm-4 hidden-xs thumbnail img-responsive ' %>
          </div>

        </div>

    <% end %>
  </div>
</div>


