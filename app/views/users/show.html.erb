<div class='container'>
<article id="user">
  <div class='row'>
  <div class='col-md-2'>
  <p><%= profile_image_for(@user) %></p>
  <h3>Member Since</h3>
<p>
  <%= @user.created_at.strftime("%B %Y") %>
</p>

  </div>
    <div class='col-md-6'><h1><%= @user.name %></h1>
    <h2><%= mail_to(@user.email) %></h2>


  <nav>
    <%= link_to 'Edit Account', edit_user_path(@user), class: 'button' %>
    <%= link_to 'Delete Account', @user,
                method: :delete,
                data: { confirm: 'Are you sure you want to permanently delete your account?' },
                class: 'button' %>
  </nav>


</div>
</div>
</article>

</div>
